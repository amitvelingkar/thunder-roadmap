mixin milestoneForm(milestone = {})
    form(action=`/milestone/add/${milestone._id || ''}` method="POST" class="card")
        label(for="name") Name
        input(type="text" name="name" value=milestone.name)
        label(for="description") Description
        input(type="text" name="description" value=milestone.description)
        input(type="submit" value="Save" class="button")
