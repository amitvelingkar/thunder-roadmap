mixin sentimentForm(sentiment = {})
    form(action=`/sentiment/add/${sentiment._id || ''}` method="POST" class="card")
        label(for="name") Name
        input(type="text" name="name" value=sentiment.name)
        label(for="description") Description
        input(type="text" name="description" value=sentiment.description)
        input(type="submit" value="Save" class="button")
